@model WebApplication1.ViewModels.KartingaiEditViewModel

@{
    ViewBag.Title = "Delete";
}

<h2>Kartingo šalinimas</h2>

<h3>Ar tikrai norite pašalinti šį automobilį?</h3>
<div>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.fk_modelis)
        </dt>

        <dd>
            @Html.DisplayFor(model => model.fk_modelis)
        </dd>
    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @if (ViewBag.naudojama != null)
            {
                <h5 style="color:red">@ViewBag.naudojama</h5>
            }
            else
            {
                <input type="submit" value="Šalinti" class="btn btn-danger" />
            }
            @Html.ActionLink("Atgal į sąrašą", "Index", "Kartingas", new { @class = "btn btn-default" })
        </div>
    }
</div>

